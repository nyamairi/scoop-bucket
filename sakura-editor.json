    "extract_dir":  "sakura2-3-2-0",
    "bin": "sakura.exe",
    "homepage": "https://github.com/sakura-editor/sakura",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/sakura-editor/sakura/releases/download/v$version/sakura$dashVersion.zip",
        "extract_dir": "sakura$dashVersion"
    },
    "depends":  [
        "ln",
        "sudo",
        "touch"
    ],
    "persist":  [
        "ini"
    ],
    "pre-install":  [
        "IF EXIST \"$persist_dir/ini/sakura.ini\" (",
        "COPY /Y $persist_dir/ini/sakura.ini $dir/sakura.ini",
        ") ELSE (",
        "ECHO [Common]         >> $dir/sakura.ini",
        "ECHO bTaskTrayStay=0  >> $dir/sakura.ini",
        "ECHO bTaskTrayUse=0   >> $dir/sakura.ini",
        "ECHO nFileShareMode=0 >> $dir/sakura.ini",
        ")"
    ],
    "post-install": [
        "IF NOT EXIST \"$persist_dir/ini/sakura.ini\" (",
        "COPY /Y $dir/sakura.ini $persist_dir/ini/sakura.ini",
        ")"
    ]
}
